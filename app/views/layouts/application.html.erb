<!DOCTYPE html>
<html>
<head>
  <title>ClarityBox</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="//use.typekit.net/bmv8eic.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
</head>
<body>


  <!-- NAVIGATION -->



  <header class = "primary-nav">

    <div class = "sticky container">

      <%= link_to '', app_home_url, :class => 'nav-logo' %>

          <div class = "title">
            <% if signed_in?  %>
                  <%= link_to "#{current_user.first_name}'s ClarityBox", user_url(session[:user_id]) %></h2>
            <% end %>
          </div>



     <div class = "notice">
        <%= notice %>
    </div>


      <nav class = "nav-elements">
        <ul>
        <% if signed_in?  %>

            <% if super_admin? %>

              <li><%= link_to 'All companies', companies_url %></li>

              <li><%= link_to 'Sign out', session_url, method: 'delete' %></li>

              <% else %>

              <li><%= link_to current_user.company.name, company_url(current_user.company) %></li>

              <li><%= link_to 'Sign out', session_url, method: 'delete' %></li>
              <% end %>


        <% else %>
          <li><%= link_to 'Sign in', new_session_url %></li>
          <li><%= link_to 'Sign out', session_url, method: 'delete' %></li>
        <% end %>
        </ul>
      </nav>

  </div>

</header>


      <%= yield %>


<!-- FOOTER -->


  <footer class = "container">

        <p class = "footer"> &copy; 2013 Made with love by Claire </p>


  </footer>


</body>
</html>
