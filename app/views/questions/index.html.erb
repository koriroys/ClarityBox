
 <h1 class = "large-top-space center">See <%= current_user.company.name %> clearly.</h1>

  <div class = "primary-content center top-space ">
    <%= link_to 'Ask a question', new_question_url, :class => 'button'%>
  </div>

<div class = "primary-content app ">


      <% @questions.each do |question| %>

          <% if question.company_id == current_user.company_id || super_admin? %>

            <h4 class = "top-space">Week of <%= question.week.start_date.strftime("%B %e")%>:
            </h4>

            <h3 class = "center italic">
              "<%= question.question_text %>"
            </h3>




        <% if question.send_question == true %>
            <p class = "center">Active question</p>
        <% else %>
            <p class = "center">Inactive question</p>
        <% end %>



            <div class = "button-set">

                <%= link_to 'View', question_url(question), :class => 'button small'%>
                <%= link_to 'Edit', edit_question_url(question), :class => 'button small'%>

            </div>

          <% end %>

      <% end %>


    </div>

