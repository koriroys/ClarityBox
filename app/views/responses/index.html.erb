<h1 class = "large-top-space center">This week's rollup</h1>

 <p class = "center italic">
    (<%= @response.question.week.start_date.strftime("%B %e") %> - <%= @response.question.week.end_date.strftime("%B %e") %>)
</p>

<h2 class = "top-space center italic">"<%= @response.question.question_text %>"</h2>

    <p class = "center"><%= @yes_responses.count %> people said "Yes".</p>
    <p class = "center"><%= @no_responses.count %> people said "No".</p>

<% @responses.each do |response| %>

    <% if response.public_response == true %>

        <p><%= response.user.first_name %>: <%= response.response_text %>

         <% if response.user == current_user %>

        <%= link_to '(view)', question_response_url(@question, response) %>
        </p>



        <% end %>

        <% else %>

        <p class = "italic">You didn't share your response with your team this week. View your response <%= link_to 'here.', question_response_url(@question, response) %></p>

    <% end %>

<% end %>




    <p class = "center"><%= link_to 'Back to the question', question_url(@question) %></p>
