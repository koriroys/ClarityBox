

   <h1 class = "large-top-space center">New User</h1>

      <div class = "primary-content top-space">


        <p><%= notice %></p>


<%= form_for @user, class: 'user-form' do |f| %>

        <p class = "center">
<!--           <%= f.label :first_name, 'First' %>
 -->          <%= f.text_field :first_name, { :value => 'First Name', :class => 'text-field'} %>

<!--           <%= f.label :last_name, 'Last' %> -->
          <%= f.text_field :last_name,  { :value => 'Last Name', :class => 'text-field'}  %>
        </p>

        <p class = "center">
<!--           <%= f.label :email, 'Email' %> -->
          <%= f.text_field :email,  { :value => 'Email', :class => 'text-field-long'}  %></p>

        <p class = "center">
          <%= f.label :user_role, 'User role' %>
          <%= f.select :user_role, ['Super Admin', 'Admin', 'General',] %></p>


        <p class = "center">
          <%= f.label :company_id, 'Company' %>
          <%= f.select :company_id, options_from_collection_for_select(Company.all, :id, :name) %></p>
        </p>

      <p class = "center">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password,  {:class => 'text-field'}  %>
        <%= f.label :password_confirmation, 'Confirm password' %>
        <%= f.password_field :password_confirmation,  {:class => 'text-field'}  %>
      </p>



      <p class = "center"><%= f.submit :class => 'button' %></p>



      <% end %>


