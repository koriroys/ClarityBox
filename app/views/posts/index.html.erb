<div class="blog main-callout">
  <h3>Blog</h3>
</div>

<div class = "smaller-container section">

<% @posts.each do |post| %>

  <div class = "post">

    <h5 class = "color"><%= post.created_at.strftime('%B %e, %Y') %></h5>

    <h4 class = "blog"><%= post.title %></h4>

    <p class = "small center">by <%= post.name %></p>

    <p class = "top-space"><%= post.content %></p>


    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>

  </div>

<% end %>




</div>
