<div class = "container primary-content group">
  <h3>Edit your week.</h3>

        <%= form_tag(week_url(@week), method: 'put') do%>

            <p>This is Week #
                <%= text_field_tag :week_number, @week.week_number %>
            </p>

            <p>The week begins on
                <%= text_field_tag :week_start, @week.week_start %>
                and ends on
                <%= text_field_tag :week_stop, @week.week_stop %>
            </p>



          <div class = "button-set">
            <%= submit_tag "Save", :class => 'button' %>

        <% end %>

    <p>or <%= link_to 'Cancel', weeks_url %></p>


    <%= link_to 'Delete', week_url(@week), method: 'delete', data: { confirm: "You sure about that?" } %>

  </div>
</div>



