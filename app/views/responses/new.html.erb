<h1 class = "large-top-space center">Your response</h1>

  <div class = "primary-content ">

    <h3 class = "top-space center italic">
      "<%= @response.question.question_text %>"
    </h3>

    <%= form_for @response do |f| %>

      <p>
        <%= f.label :response_text, 'Your thoughts' %>
      </p>
        <%= f.text_area :response_text %>

        <%= f.submit 'Respond', :class => 'button' %>

    <% end %>

  </div>

