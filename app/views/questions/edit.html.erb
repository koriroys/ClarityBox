<div class = "container primary-content group">
  <h1 = class = "large-top-space center">Edit a  question.</h1>

        <%= form_tag(question_url(@question), method: 'put') do%>

          <p>Company:
                <%= select_tag :company_id, options_from_collection_for_select(Company.all, :id, :name, @question.company_id) %>
          </p>

            <p>This question is for:
                <%= select_tag :week_id, options_from_collection_for_select(Week.all, :id, :end_date, @question.week_id) %>
            </p>

            <p>What question do you want to ask?
                <%= text_area_tag :question_text, @question.question_text %>
            </p>






          <div class = "button-set">
            <%= submit_tag "Save", :class => 'button' %>

        <% end %>

    <p>or <%= link_to 'Cancel', questions_url %></p>

        <%= link_to 'Delete', question_url(@question), method: 'delete', data: { confirm: "You sure about that?" } %>


  </div>
</div>
