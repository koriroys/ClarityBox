<h1 class = "large-top-space center">This week's question</h1>

  <p class = "center italic">
      (<%= @question.week.start_date.strftime("%B %e")  %> - <%= @question.week.end_date.strftime("%B %e")  %>)
  </p>

  <h2 class = "top-space center italic">
    "<%= @question.question_text %>"
  </h2>

    <p class = "top-space center"><%= link_to 'Respond', new_question_response_url(@question), :class => 'button' %></p>

      <% if @question.responses.present? %>
        <p class = "italic center"><%= link_to 'View the rollup', question_responses_url(@question) %></p>
      <% end %>

  <% if admin? || super_admin? %>

      <% if @question.send_question == true %>
          <p class = "top-space center">Ask this question on <%= @question.ask_at.strftime("%A, %b %e at %l:%M %p") %></p>
      <% else %>
          <p class = "center">Inactive question</p>
      <% end %>


        <% if @question.send_reminder == true %>
          <p class = "center">Send a reminder on <%= @question.remind_at.strftime("%A, %b %e at %l:%M %p") %></p>
        <% end %>

       <% if @question.send_rollup == true %>
          <p class = "center">Send a rollup on <%= @question.send_roll_up_at.strftime("%A, %b %e at %l:%M %p") %></p>
      <% end %>
           <p class = "center"><%= link_to 'Edit this question', edit_question_url(@question)%></p>
    <% end %>

    <% if admin? || super_admin? %>
            <p class = "center"><%= link_to 'Back to all the questions', questions_url %></p>
      <% end %>

    </div>





