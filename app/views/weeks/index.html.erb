<div class = "container">


    <h1 class = "top-space center">What week is it?</h1>



    <div class = "primary-content app">

        <% @weeks.each do |week| %>

          <h4 class = "top-space">
     <!--         Week #<%= week.week_number %> -->

            <%= link_to week.week_number, question_url(week.id), :class => 'button' %>
            (<%= week.week_start %> - <%= week.week_stop %>)

          </h4>

          <p>
            <%= link_to 'Edit', edit_week_url(week) %>
          </p>


        <% end %>

   </div>

    <div class = "margin-auto">
        <%= link_to 'Create a new week', new_week_url, :class => 'button'%>
    </div>



    <footer class = "top-space group ">
        <ul class = "app">
          <li><%= link_to 'Ask a question', questions_url %></li>
          <li><%= link_to 'Start over', responses_url %></li>
        </ul>
    </footer>

</div>
