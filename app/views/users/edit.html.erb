<h1 class = "large-top-space center">Editing User</h1>


<%= form_tag(user_url(@user), method: 'put') do %>

<p><%= notice %></p>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, @user.email %>
  </p>

  <p>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @user.first_name %>
  </p>

<p>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, @user.last_name %>
  </p>

   <p>User role:
          <%= select_tag :user_role, options_from_collection_for_select(User.all, :user_role, :user_role, @user.user_role) %>
    </p>


   <p>Company:
          <%= select_tag :company_id, options_from_collection_for_select(Company.all, :id, :name, @user.company_id) %>
    </p>


  <div>
    <%= submit_tag 'Save', :class => 'button' %>
  </div>

<% end %>

