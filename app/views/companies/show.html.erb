<h1 class = "large-top-space center"><%= @company.name %></h1>


<h3 class = "center italic">All users</h3>

<div class = "smaller-container">
      <% @company.users.each do |user| %>

            <p><%= user.first_name %> <%= user.last_name %>

            <% if super_admin? || admin? %>
              <em>(<%= user.user_role %>)</em>
            </p>
            <% end %>

            <% if super_admin? %>
              <%= link_to 'View', user_url(user) %>
              <%= link_to 'Edit', edit_user_url(user) %>
            <% end %>
      <% end %>
</div>


  <% if super_admin? || admin? %>
      <p class = "center"><%= link_to 'Add a user', new_user_url, :class => 'button' %></p>
  <% end %>

  <% if super_admin? %>
      <p class = "center"><%= link_to 'Back to all the companies', companies_url %></p>
  <% end %>
