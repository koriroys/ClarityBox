

<h2 class = "large-top-space center"><%= @user.first_name %>'s ClarityBox</h2>

<h3 class = "center italic">Your responses</h3>

<% @responses.each do |response| %>

  <h4 class = "top-space center">Week of <%= response.question.week.start_date.strftime("%B %e") %>: <em>"<%= response.question.question_text %>"</em></h4>

    <% if response.yes_response == true %>
        <p class = "center">
          You responded, "Yes."
        </p>
    <% end %>

    <% if response.yes_response == false %>
        <p class = "center">
          You responded, "No."
        </p>
    <% end %>

    <p class = "top-space center">
      <%= link_to 'View your response', question_response_url(response.question, response), :class => 'button small' %>
    </p>
    <p class = "center">
      <%= link_to 'View the rollup', question_responses_url(response.question) %>
    </p>

<% end %>


</div>
