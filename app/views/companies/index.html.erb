 <h1 class = "large-top-space center">All the companies</h1>


<div class = "primary-content">

  <% @companies.each do |company| %>

    <h3 class = "top-space center italic"><%= company.name %></h3>

        <p class = "center"><%= link_to 'View', company_url(company), :class => 'button small' %><%= link_to 'Edit', edit_company_url(company), :class => 'button small'%></p>

  <% end %>

  <div class = "center large-top-space">
    <%= link_to 'Create a new company', new_company_url, :class => "button" %>
  </div>


</div>
