


  <h1 class = "large-top-space center">Sign In</h1>


  <%= form_tag sessions_url do %>

    <p>
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </p>

    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>

    <%= submit_tag 'Sign in', :class => 'button' %>

  <% end %>

<p>  <%= notice %></p>
