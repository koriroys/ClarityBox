

<div class = "app-home-page">

  <div class = "container group">

      <% if !signed_in? %>

      <h1 class = "center">
        ClarityBox</h1>
<div class = "large-logo">
</div>

  <% end %>

<% if signed_in? %>


      <h2 class = "center">
       Welcome <%= current_user.first_name %>!</h2>

<!--        <div class = "large-logo">
      </div>
 -->
<div class = "center">
      <%= image_tag current_user.avatar_url, :class => 'avatar large' %>

</div>
        <% if super_admin? %>
          <div class = "top-space center">
            <%= link_to 'All companies', companies_url, :class => 'button-small outline'%>

        <%= link_to 'App invites', app_requests_url, :class => 'button-small outline'%>

        <%= link_to 'Project inquiries', work_requests_url, :class => 'button-small outline' %>

        <%= link_to 'New blog post', new_post_url, :class => 'button-small outline' %>

      </div>
        <% end %>

        <% if admin? %>
          <div class = "top-space center">
            <%= link_to 'Your company', company_url(current_user.company), :class => 'button'%>
            <%= link_to 'Your profile', user_url(current_user), :class => 'button square'%>
          </div>
        <% end %>

        <% if general_user?  %>
          <div class = "top-space center">
            <%= link_to 'Enter', user_url(current_user), :class => 'button'%>
          </div>
        <% end %>

      <% else %>


       <div class = "top-space center">
          <%= link_to 'Get invited', new_app_request_url, :class => 'button'%>
        </div>
  <% end %>
</div>

</div>



