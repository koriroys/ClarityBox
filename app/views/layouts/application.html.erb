<!DOCTYPE html>
<html>
<head>
  <title>ClarityBox</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="//use.typekit.net/bmv8eic.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
</head>
<body>


  <!-- NAVIGATION -->

<header class = "primary-nav">



  <% if signed_in? %>
     <div class = "center notice">
        Hey, <%= User.find(session[:user_id]).first_name %>.
        <%= notice %>
    </div>
  <% end %>


    <div class = "sticky container">

      <h1 class = "nav-logo"><%= link_to 'ClarityBox', app_home_url%></h1>

      <nav class = "nav-elements">
        <ul>
        <% if signed_in? %>
          <li><%= link_to 'Your ClarityBox', user_url(session[:user_id]) %></li>
          <li><%= link_to 'Sign out', session_url, method: 'delete' %></li>
        <% else %>
          <li><%= link_to 'Sign in', new_session_url %></li>
          <li><%= link_to 'Sign out', session_url, method: 'delete' %></li>
        <% end %>
        </ul>
      </nav>

  </div>

</header>






   <div class = "container group">


      <%= yield %>

  </div>




<!-- FOOTER -->


  <footer class = "top-space group">

    <ul>
      <% if signed_in? %>

          <% if super_admin? %>

            <li><%= link_to 'View the companies', companies_url %></li>

          <% else %>

          <li><%= link_to current_user.company.name, company_url(current_user.company) %></li>

          <% end %>

          <li><%= link_to 'Ask a question', new_question_url %></li>
          <li><%= link_to 'Respond to a question', questions_url %></li>
      <% end %>
    </ul>

  </footer>


</body>
</html>
