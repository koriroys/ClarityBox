<div class = "container">


 <h1 class = "large-top-space center">See your company clearly.</h1>


  <div class = "margin-auto">
    <%= link_to 'Ask a question', new_question_url, :class => 'button'%>
  </div>



  <div class = "primary-content app">


        <% @questions.each do |question| %>

            <h4 class = "top-space"s>
              Week #<%= question.week.week_number %>
              <time>
                (<%= question.week.week_start %> - <%= question.week.week_stop %>)
              </time>
            </h4>


            <h3 class = "center italic">
              "<%= question.question_text %>"
            </h3>



            <div class = "button-set">

                <%= link_to 'Respond', question_url(question), :class => 'button small' %>
                <%= link_to 'View', week_url(question.week_id), :class => 'button small'%>
                <%= link_to 'Edit', edit_question_url(question), :class => 'button small'%>
            </div>

        <% end %>

    </div>

  <footer class = "top-space group ">
      <ul class = "app">
        <li><%= link_to 'See your weeks', weeks_url %></li>
        <li><%= link_to 'Start over', responses_url %></li>
      </ul>
  </footer>


</div>
