<div class = "container">

  <h1 class = "top-space center">This week's responses</h1>


      <div class = "primary-content app">

         <h4 class = "top-space">
            Week #<%= @week.week_number %>
          <time>
            (<%= @week.week_start %> - <%= @week.week_stop %>)
          </time>
        </h4>

        <% @week.questions.each do |question| %>
          <h3 class = "center italic">
            "<%= question.question_text %>"
          </h3>



      <% question.responses.each do |response| %>

          <h4 class = "top-space italic">
              <%= response.user_name %>:  "<%= response.response_text %>"
          </h4>

          <p>
            <%= link_to 'Edit', edit_response_url(response) %>
          </p>

        <% end %>

      </div>

  <% end %>

  <footer class = "top-space group ">
      <ul class = "app">
        <li><%= link_to 'See all questions', questions_url %></li>
        <li><%= link_to 'Start over', responses_url %></li>
      </ul>
  </footer>


</div>


